{
  "name": "pagyra-js",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": {
    "node:path": false,
    "node:url": false,
    "node:fs/promises": false,
    "node:zlib": false,
    "zlib": false,
    "fs": false,
    "path": false,
    "url": false,
    "./src/pdf/font/builtin-fonts.js": "./src/pdf/font/builtin-fonts.browser.js",
    "./src/environment/node-environment.js": "./src/environment/node-environment.browser.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/index.js",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "test": "vitest run",
    "lint": "eslint src tests --ext .ts,.js",
    "playground": "tsx playground/server.ts",
    "playground:render": "tsx scripts/render-playground-example.ts --debug-level debug --debug-cats 'layout,paint,pdf'",
    "build:browser": "esbuild src/browser-entry.ts --bundle --minify --sourcemap --format=esm --platform=browser --main-fields=browser,module,main --alias:node:path=./src/shim/empty.ts --alias:path=./src/shim/empty.ts --alias:node:url=./src/shim/url-empty.ts --alias:url=./src/shim/url-empty.ts --alias:node:fs/promises=./src/shim/fs-empty.ts --alias:fs=./src/shim/fs-empty.ts --alias:node:zlib=./src/shim/zlib-empty.ts --alias:zlib=./src/shim/zlib-empty.ts --outfile=dist/browser/pagyra.min.js --alias:src/environment/node-environment.ts=./src/environment/node-environment.browser.ts --alias:src/pdf/font/builtin-fonts.ts=./src/pdf/font/builtin-fonts.browser.ts"
  },
  "devDependencies": {
    "@types/css": "^0.0.36",
    "@types/express": "^4.17.23",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "css": "^3.0.0",
    "eslint": "^9.39.1",
    "express": "^4.21.2",
    "linkedom": "^0.16.11",
    "esbuild": "^0.21.5",
    "pdf-parse": "^2.4.5",
    "tsx": "^4.7.1",
    "typescript": "^5.9.0",
    "vitest": "^1.6.0"
  }
}
